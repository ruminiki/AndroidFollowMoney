            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_search"/>

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
